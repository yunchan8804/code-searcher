<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        다크 테마 색상 - Material Design 3 기반
        참고: https://m3.material.io/blog/dark-theme-design-tutorial-video
              https://design.google/library/material-design-dark-theme

        원칙:
        - 기본 배경 #121212 (순흑 대신 다크 그레이로 눈 피로 감소)
        - Elevation에 따른 표면 밝기 증가 (깊이감 표현)
        - 텍스트는 off-white 사용 (halation 효과 방지)
        - 강조색 채도 낮춤 (라이트 모드 대비 ~200 레벨)
    -->

    <!-- 기본 배경 (0dp elevation) -->
    <Color x:Key="BackgroundColor">#121212</Color>

    <!-- 표면 (4dp elevation: #121212 + 9% white overlay) -->
    <Color x:Key="SurfaceColor">#1E1E1E</Color>

    <!-- 텍스트 색상 (87% opacity white equivalent) -->
    <Color x:Key="ForegroundColor">#E0E0E0</Color>

    <!-- 보조 텍스트 (60% opacity white equivalent) -->
    <Color x:Key="SecondaryForegroundColor">#9E9E9E</Color>

    <!-- 강조색 (Material Blue 200) -->
    <Color x:Key="AccentColor">#82B1FF</Color>
    <Color x:Key="AccentHoverColor">#448AFF</Color>
    <Color x:Key="AccentPressedColor">#2979FF</Color>

    <!-- Hover 상태 (8dp elevation: +12% white) -->
    <Color x:Key="HoverColor">#2D2D2D</Color>

    <!-- 선택 상태 (강조색 15% overlay) -->
    <Color x:Key="SelectedColor">#1A3A5C</Color>

    <!-- 테두리 (12% white overlay) -->
    <Color x:Key="BorderColor">#333333</Color>

    <!-- 포커스된 섹션 배경 (더 밝게) -->
    <Color x:Key="FocusedSectionColor">#2A2A2A</Color>

    <!-- 최근 사용 영역 (Amber 계열 - 채도 낮춤) -->
    <Color x:Key="RecentBackgroundColor">#2A2520</Color>
    <Color x:Key="RecentFocusedColor">#3A3530</Color>
    <Color x:Key="RecentBorderColor">#FFAB40</Color>
    <Color x:Key="RecentHoverColor">#3D352A</Color>
    <Color x:Key="RecentPressedColor">#4A4035</Color>

    <!-- 상태바 (6dp elevation) -->
    <Color x:Key="StatusBarColor">#1E1E1E</Color>
    <Color x:Key="StatusBarForegroundColor">#B0B0B0</Color>

    <!-- 즐겨찾기 영역 (Green 계열 - 채도 낮춤) -->
    <Color x:Key="FavoriteBackgroundColor">#1A2E1A</Color>
    <Color x:Key="FavoriteFocusedColor">#2A3E2A</Color>
    <Color x:Key="FavoriteBorderColor">#69F0AE</Color>
    <Color x:Key="FavoriteHoverColor">#2A4A2A</Color>
    <Color x:Key="FavoritePressedColor">#3A5A3A</Color>

    <!-- 경고/스타 버튼 (Amber 계열) -->
    <Color x:Key="WarningBackgroundColor">#2E2A1A</Color>
    <Color x:Key="WarningForegroundColor">#FFD54F</Color>
    <Color x:Key="WarningBorderColor">#FFAB40</Color>
    <Color x:Key="WarningHoverColor">#3E3A2A</Color>
    <Color x:Key="WarningPressedColor">#4E4A3A</Color>

    <!-- 기타 색상 -->
    <Color x:Key="PrimaryButtonForegroundColor">#FFFFFF</Color>
    <Color x:Key="DisabledColor">#4A4A4A</Color>
    <Color x:Key="OverlayColor">#B0121212</Color>

    <!-- ===== SolidColorBrush ===== -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}"/>
    <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="{StaticResource SecondaryForegroundColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHoverColor}"/>
    <SolidColorBrush x:Key="AccentPressedBrush" Color="{StaticResource AccentPressedColor}"/>
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>
    <SolidColorBrush x:Key="SelectedBrush" Color="{StaticResource SelectedColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="FocusedSectionBrush" Color="{StaticResource FocusedSectionColor}"/>
    <SolidColorBrush x:Key="RecentBackgroundBrush" Color="{StaticResource RecentBackgroundColor}"/>
    <SolidColorBrush x:Key="RecentFocusedBrush" Color="{StaticResource RecentFocusedColor}"/>
    <SolidColorBrush x:Key="RecentBorderBrush" Color="{StaticResource RecentBorderColor}"/>
    <SolidColorBrush x:Key="StatusBarBrush" Color="{StaticResource StatusBarColor}"/>
    <SolidColorBrush x:Key="StatusBarForegroundBrush" Color="{StaticResource StatusBarForegroundColor}"/>

    <!-- 즐겨찾기 버튼 브러시 -->
    <SolidColorBrush x:Key="FavoriteBackgroundBrush" Color="{StaticResource FavoriteBackgroundColor}"/>
    <SolidColorBrush x:Key="FavoriteFocusedBrush" Color="{StaticResource FavoriteFocusedColor}"/>
    <SolidColorBrush x:Key="FavoriteBorderBrush" Color="{StaticResource FavoriteBorderColor}"/>
    <SolidColorBrush x:Key="FavoriteHoverBrush" Color="{StaticResource FavoriteHoverColor}"/>
    <SolidColorBrush x:Key="FavoritePressedBrush" Color="{StaticResource FavoritePressedColor}"/>

    <!-- 최근 버튼 추가 브러시 -->
    <SolidColorBrush x:Key="RecentHoverBrush" Color="{StaticResource RecentHoverColor}"/>
    <SolidColorBrush x:Key="RecentPressedBrush" Color="{StaticResource RecentPressedColor}"/>

    <!-- 경고/스타 버튼 브러시 -->
    <SolidColorBrush x:Key="WarningBackgroundBrush" Color="{StaticResource WarningBackgroundColor}"/>
    <SolidColorBrush x:Key="WarningForegroundBrush" Color="{StaticResource WarningForegroundColor}"/>
    <SolidColorBrush x:Key="WarningBorderBrush" Color="{StaticResource WarningBorderColor}"/>
    <SolidColorBrush x:Key="WarningHoverBrush" Color="{StaticResource WarningHoverColor}"/>
    <SolidColorBrush x:Key="WarningPressedBrush" Color="{StaticResource WarningPressedColor}"/>

    <!-- 기타 브러시 -->
    <SolidColorBrush x:Key="PrimaryButtonForegroundBrush" Color="{StaticResource PrimaryButtonForegroundColor}"/>
    <SolidColorBrush x:Key="DisabledBrush" Color="{StaticResource DisabledColor}"/>
    <SolidColorBrush x:Key="OverlayBrush" Color="{StaticResource OverlayColor}"/>

</ResourceDictionary>
