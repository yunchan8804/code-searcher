<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 다크 테마 색상 -->
    <Color x:Key="BackgroundColor">#1E1E1E</Color>
    <Color x:Key="SurfaceColor">#2D2D2D</Color>
    <Color x:Key="ForegroundColor">#E0E0E0</Color>
    <Color x:Key="SecondaryForegroundColor">#A0A0A0</Color>
    <Color x:Key="AccentColor">#64B5F6</Color>
    <Color x:Key="AccentHoverColor">#42A5F5</Color>
    <Color x:Key="AccentPressedColor">#2196F3</Color>
    <Color x:Key="HoverColor">#3A3A3A</Color>
    <Color x:Key="SelectedColor">#1E3A5F</Color>
    <Color x:Key="BorderColor">#3A3A3A</Color>
    <Color x:Key="RecentBackgroundColor">#3A3020</Color>
    <Color x:Key="RecentBorderColor">#B8860B</Color>
    <Color x:Key="StatusBarColor">#252525</Color>

    <!-- 즐겨찾기 버튼 색상 (다크 테마) -->
    <Color x:Key="FavoriteBackgroundColor">#1B3A1B</Color>
    <Color x:Key="FavoriteBorderColor">#4CAF50</Color>
    <Color x:Key="FavoriteHoverColor">#2E5A2E</Color>
    <Color x:Key="FavoritePressedColor">#3D7A3D</Color>

    <!-- 최근 버튼 추가 색상 (다크 테마) -->
    <Color x:Key="RecentHoverColor">#4A4030</Color>
    <Color x:Key="RecentPressedColor">#5A5040</Color>

    <!-- 경고/스타 버튼 색상 (다크 테마) -->
    <Color x:Key="WarningBackgroundColor">#3A3020</Color>
    <Color x:Key="WarningForegroundColor">#FFB74D</Color>
    <Color x:Key="WarningBorderColor">#B8860B</Color>
    <Color x:Key="WarningHoverColor">#4A4030</Color>
    <Color x:Key="WarningPressedColor">#5A5040</Color>

    <!-- 기타 색상 (다크 테마) -->
    <Color x:Key="PrimaryButtonForegroundColor">#FFFFFF</Color>
    <Color x:Key="DisabledColor">#505050</Color>
    <Color x:Key="OverlayColor">#80000000</Color>

    <!-- SolidColorBrush -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}"/>
    <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="{StaticResource SecondaryForegroundColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHoverColor}"/>
    <SolidColorBrush x:Key="AccentPressedBrush" Color="{StaticResource AccentPressedColor}"/>
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>
    <SolidColorBrush x:Key="SelectedBrush" Color="{StaticResource SelectedColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="RecentBackgroundBrush" Color="{StaticResource RecentBackgroundColor}"/>
    <SolidColorBrush x:Key="RecentBorderBrush" Color="{StaticResource RecentBorderColor}"/>
    <SolidColorBrush x:Key="StatusBarBrush" Color="{StaticResource StatusBarColor}"/>

    <!-- 즐겨찾기 버튼 브러시 -->
    <SolidColorBrush x:Key="FavoriteBackgroundBrush" Color="{StaticResource FavoriteBackgroundColor}"/>
    <SolidColorBrush x:Key="FavoriteBorderBrush" Color="{StaticResource FavoriteBorderColor}"/>
    <SolidColorBrush x:Key="FavoriteHoverBrush" Color="{StaticResource FavoriteHoverColor}"/>
    <SolidColorBrush x:Key="FavoritePressedBrush" Color="{StaticResource FavoritePressedColor}"/>

    <!-- 최근 버튼 추가 브러시 -->
    <SolidColorBrush x:Key="RecentHoverBrush" Color="{StaticResource RecentHoverColor}"/>
    <SolidColorBrush x:Key="RecentPressedBrush" Color="{StaticResource RecentPressedColor}"/>

    <!-- 경고/스타 버튼 브러시 -->
    <SolidColorBrush x:Key="WarningBackgroundBrush" Color="{StaticResource WarningBackgroundColor}"/>
    <SolidColorBrush x:Key="WarningForegroundBrush" Color="{StaticResource WarningForegroundColor}"/>
    <SolidColorBrush x:Key="WarningBorderBrush" Color="{StaticResource WarningBorderColor}"/>
    <SolidColorBrush x:Key="WarningHoverBrush" Color="{StaticResource WarningHoverColor}"/>
    <SolidColorBrush x:Key="WarningPressedBrush" Color="{StaticResource WarningPressedColor}"/>

    <!-- 기타 브러시 -->
    <SolidColorBrush x:Key="PrimaryButtonForegroundBrush" Color="{StaticResource PrimaryButtonForegroundColor}"/>
    <SolidColorBrush x:Key="DisabledBrush" Color="{StaticResource DisabledColor}"/>
    <SolidColorBrush x:Key="OverlayBrush" Color="{StaticResource OverlayColor}"/>

</ResourceDictionary>
