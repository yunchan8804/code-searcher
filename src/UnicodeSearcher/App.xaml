<Application x:Class="UnicodeSearcher.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UnicodeSearcher"
             xmlns:converters="clr-namespace:UnicodeSearcher.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- 스크롤바 스타일 -->
                <ResourceDictionary Source="Resources/Styles/ScrollBarStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
            <converters:CategorySelectedConverter x:Key="CategorySelectedConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
